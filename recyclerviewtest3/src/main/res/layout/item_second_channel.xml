<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp">

    <android.support.v7.widget.RecyclerView
        android:background="@color/grey"
        android:id="@+id/channel_rv_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/channel_rv_view2"
        android:layout_marginTop="8px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/kuaibao">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:src="@mipmap/jidongkuaibao"
                />
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/kuaibao"
            android:layout_toLeftOf="@id/gengduo"
            android:flipInterval="3000"
            android:inAnimation="@anim/bottom_in"
            android:outAnimation="@anim/top_out"
            android:persistentDrawingCache="animation"
            android:layout_centerVertical="true" >

            <!--<TextView-->
                <!--android:id="@+id/btn"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="第一个" />-->

            <!--<TextView-->
                <!--android:id="@+id/btn1"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="第二个" />-->

        </ViewFlipper>

        <LinearLayout
            android:id="@+id/gengduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <View
                android:layout_width="1dip"
                android:layout_height="8dp"
                android:background="@color/dark_grey"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>