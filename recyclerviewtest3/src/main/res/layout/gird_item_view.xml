<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:background="@drawable/goods_item_background">

    <ImageView
        android:id="@+id/goods_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon1" />

    <TextView
        android:id="@+id/goods_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_below="@id/goods_pic"
        android:text="自营"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/goods_item_flag_background"
        android:textSize="8sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/goods_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_pic"
        android:layout_toRightOf="@id/goods_flag"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="2"
        android:textSize="12sp"
        android:ellipsize="end"
        android:textStyle="bold"
        android:text="教程示例" />


    <RelativeLayout
        android:id="@+id/item_price_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_msg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:text="￥37.90" />

        <ImageView
            android:id="@+id/search_category_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/unbookmark"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/delete_goods_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:tint="@color/colorPrimary"
        android:src="@drawable/goods_item_delete_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/item_price_rl">

        <TextView
            android:id="@+id/goods_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="￥37.90" />

    </LinearLayout>

</RelativeLayout>
