<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exmaple.recyclerviewtest.MainActivity">

    <Button
        android:text="ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/btn_list_view"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="GirdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_gird_view"
        android:layout_below="@+id/btn_list_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="StaggeredView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_staggered_view"
        android:layout_below="@+id/btn_gird_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
